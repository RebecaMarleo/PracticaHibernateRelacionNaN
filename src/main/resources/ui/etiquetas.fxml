                <Label layoutX="276.0" layoutY="73.0" text="Nombre" />
                <TextField fx:id="txtNombre" layoutX="325.0" layoutY="69.0" prefHeight="25.0" prefWidth="332.0" />
                <Label layoutX="276.0" layoutY="47.0" text="ID" />
                <ListView fx:id="lvEtiquetas" layoutX="47.0" layoutY="68.0" onMouseClicked="#onFilaSeleccionada" prefHeight="343.0" prefWidth="200.0" />
