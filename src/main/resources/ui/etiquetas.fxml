                <Button fx:id="btnGestionar" layoutX="595.0" layoutY="424.0" mnemonicParsing="false" onAction="#onBtnGestionar" text="Gestionar" />
                <Button fx:id="btnVolver" mnemonicParsing="false" onAction="#onBtnVolver" text="&lt;  VOLVER A LA PÁGINA ANTERIOR">
